{% extends "recipes/layout.njk" %}
{% block content %}

  <main class="recipe-page main -edit">
    <div class="header-edit">
      <h1 class="title">
        Receita:
        {{recipe.title}}
      </h1>
      <a href="/admin/recipes/{{ recipe.id }}/edit" class="button">Editar receita</a>
    </div>
    <img class="image" src="{{recipe.image}}" alt="Foto de {{recipe.title}}">
    <h1 class="title">{{recipe.title}}</h1>
    <p class="author">{{recipe.author}}</p>

    <section class="-active">
      <div class="container">
        <h2 class="preparation">Ingredientes</h2>
      </div>
      <ul class="text -list">
        {% for ingredient in recipe.ingredients %}
          <li>{{ ingredient }}</li>
        {% endfor %}
      </ul>
    </section>
    <section class="-active">
      <div class="container">
        <h2 class="preparation">Modo de Preparo</h2>
      </div>
      <ol class="text -list">
        {% for step in recipe.preparation %}
          <li>{{ step }}</li>
        {% endfor %}
      </ol>
    </section>
    <section class="-last -active">
      <div class="container">
        <h2 class="preparation">Informações Adicionais</h2>
      </div>
      <p class="text">{{ recipe.information }}</p>
    </section>
  </main>

{% endblock %}
