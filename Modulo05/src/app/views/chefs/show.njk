{% extends "recipes/layout.njk" %}
{% block content %}

  <main class="admin-main">
    <div class="header-edit">
      <h1 class="title">
        Chef:
        {{chef.name}}
      </h1>
      <a href="/admin/chefs/{{ chef.id }}/edit" class="button">Editar Chef</a>
    </div>
    <div class="chef-info">
      <img src="{{chef.avatar_url}}" alt="Foto de {{chef.name}}">
      <h3>{{chef.name}}</h3>
      <p>{{ 1+1 }}
        receitas</p>
    </div>

    <p class="title">Receitas</p>

    <section class="cards">

        <div class="card">
          <img class="image" src="https://rocketseat-cdn.s3-sa-east-1.amazonaws.com/launchbase/receitas/burger.png" alt="Foto de Burguer">
          <div>
            <p class="recipe">Burguer lala</p>
            <p class="author">por {{chef.name}}</p>
            <a href="/admin/recipes/{{ 1 }}" class="link">Visualizar</a>
          </div>
        </div>


    </section>
  </main>

{% endblock %}
