{% extends "chefs/layout.njk" %}
{% block content %}

  <main class="admin-main">
    <div class="header-edit">
      <h1 class="title">
        Chef:
        {{chef.name}}
      </h1>
      <a href="/admin/chefs/{{ chef.id }}/edit" class="button">Editar Chef</a>
    </div>
    <div class="chef-info">
      <img src="{{chef.avatar_url}}" alt="Foto de {{chef.name}}">
      <h3>{{chef.name}}</h3>
      <p>{{ chef.total_recipes }}
        receitas</p>
    </div>

    <p class="title">Receitas</p>

    <section class="cards">

  {% for recipe in recipes %} 
        <div class="card">
          <img class="image" src="{{recipe.image}}" alt="Foto de {{recipe.title}}">
          <div>
            <p class="recipe">{{recipe.title}}</p>
            <p class="author">por {{chef.name}}</p>
            <a href="/admin/recipes/{{recipe.id}}" class="link">Visualizar</a>
          </div>
        </div>
  {% endfor %} 


    </section>
  </main>

{% endblock %}
